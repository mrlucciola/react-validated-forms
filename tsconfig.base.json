{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["bun-types"],

    "baseUrl": "./src",
    "paths": {
      "@configDsl/*": ["configDsl/*"],
      "@core/*": ["core/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
